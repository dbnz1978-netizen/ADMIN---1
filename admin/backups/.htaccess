# Deny all direct access to backup files
# Only authorized users can download via PHP script

Order Deny,Allow
Deny from all

# Prevent directory listing
Options -Indexes

# Disable PHP execution in this directory (security)
<FilesMatch "\.php$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Deny access to .htaccess itself
<Files .htaccess>
    Order Allow,Deny
    Deny from all
</Files>
